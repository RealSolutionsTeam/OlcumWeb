                                            {
                                                @Model.Item3.Where(x => x.bedenad == Model.Item2[j].bedenad && x.cekme == Model.Item2[j].cekme && x.olcunokid == Model.Item1[i].olcuNokId && x.pno == Model.Item2[j].pno).FirstOrDefault().deger
