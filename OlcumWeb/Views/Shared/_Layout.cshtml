        }
        p {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }
        .mertLoadingHidden {
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s 0.3s, opacity 0.3s linear;
            z-index: 999999999999999999998;
        }

        ::-webkit-input-placeholder {
            color: black !important;
        }

