    <script>
        $(window).scroll(function () {
            var height = $(window).scrollTop();
            if (height > 100) {
                $('#back2Top').fadeIn();
            } else {
                $('#back2Top').fadeOut();
            }
        });

        function KayitYapiliyorOnOff() {
            $("#mertLoadingKayitYapiliyor").toggleClass("mertLoadingHidden");
        }

        function YukleniyorOnOff() {
            $('#yukleniyorID').toggleClass("mertLoadingHidden");
        }

        function AlertMesaj(m) {
            iziToast.info({
                title: 'Mesaj!',
                message: m,
                position: 'topRight'
            });
        };

        function AlertBasari(b) {
            iziToast.success({
                title: 'Başarılı!',
                message: b,
                position: 'topRight'
            });
        };

        function AlertUyari(u) {
            iziToast.warning({
                title: 'Uyarı!',
                message: u,
                position: 'topRight'
            });
        };

        function AlertHata(h) {
            iziToast.error({
                title: 'Hata!',
                message: h,
                position: 'topCenter'
            });
        };

        function cikis() {
            $.ajax({
                type: "GET",
                url: '/Giris/cikis',
                contentType: "application/json; charset=utf-8",
                data: { ciktimi: true },
                dataType: "json"
            });
        }

        function getUrlVars(url) {
            var vars = {};
            var parts = url.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (m, key, value) {
                vars[key] = value;
            });
            return vars;
        }



        $(document).ready(function () {

            $("#back2Top").click(function (event) {
                event.preventDefault();
                $("html, body").animate({ scrollTop: 0 }, "slow");
                return false;
            });


            $('.scroll_To_Top').click(function () {
                $('html, body').animate({ scrollTop: 0 }, 700);
                return false;
            });

        });

            $(function () {
        $("#orderNo").autocomplete({
            source: '@Url.Action("GetOrderNo","AnaSayfa")'
        });
            });

        $(function () {
            $('#orderNo').keydown(function (e) {
                if (e.keyCode === 13) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("KeyPress","AnaSayfa")'
                    });
                }
            });
        });

        function git(id) {
            var x = JSON.parse(localStorage.getItem("personel"));

            if (id == 1) {
                localStorage.clear();
            }
            else if (id == 2) {
                window.location.href = "/Anasayfa/Index?id=" + x.id;
            }
            else if (id == 3) {
                window.location.href = "/NumuneKesim?ad=" + x.personelAd + "&soyad=" + x.personelSoyad;
            }
            else if (id == 4) {
                window.location.href = "/TanimlamaEkrani/Index/" + x.id;
            }
            else if (id == 5) {
                window.location.href = "/ImalatTablosu/Index/" + x.id;
            }
            else if (id == 6) {
                window.location.href = "/OlcuFormu/Index/" + x.id;
            }
            else if (id == 7) {
                window.location.href = "/Raporlama";
            }

        }

        function PrintRaporModalClose() {
            window.printList = [];
        }
    </script>

