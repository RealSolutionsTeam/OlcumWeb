                        <div class="table-responsive" id="numuneTableForm_@(j)">
                            <table id="numuneTable_@(j)" class="table table-striped" style="cursor: pointer;">
                                <thead>
                                    <tr id="numuneTableHead_@(j)">
                                        <th id="column_@(j)_0">Ölçü Noktası</th>
                                        <th id="column_@(j)_1">Kalıp Ölçüsü</th>
                                        <th id="column_@(j)_2">Tölerans</th>
                                        <th id="column_@(j)_3">Y.Ö Tablo</th>
