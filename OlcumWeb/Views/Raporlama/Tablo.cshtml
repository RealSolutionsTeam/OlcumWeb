                                        <th id="column_@(j)_5">Y.Ö Ölçülen</th>
                                        <th id="column_@(j)_6">Çekme</th>
                                        <th id="column_@(j)_7">Y.S Ölçülen</th>
                                        <th id="column_@(j)_8">Y.S Fark</th>
                                        <th id="column_@(j)_9">Y.S Tablo</th>
                                    </tr>
                                </thead>
                                <tbody id="numuneTableBody_@(j)">
                                    @{ int rowIndex = 0;}
                                    @for (int k = 0; k < Model.Item1[j].Count; k++)
                                    {
                                        if (k == 0)
                                        {
                                            <tr id="satir_@(j + "_" + rowIndex)">
                                                <td data-editable="false" id="cell_@(j + "_" + rowIndex)_0" data-olcunoktasi="@Model.Item1[j][k].olcuNoktasi" data-araid="@Model.Item1[j][k].id">
                                                    @Model.Item1[j][k].olcuNoktasi
                                                </td>

                                                @for (int z = 1; z <= 9; z++)
                                                {
                                                    <td tabindex="1" id="cell_@(j + "_" + rowIndex + "_" + z)" data-tabloIndex="@(j)" data-rowIndex="@rowIndex" data-columnIndex="@z" onchange="DegerBul(this)">@Model.Item1[j][k].deger[z - 1]</td>
                                                }

                                            </tr>
                                            rowIndex++;

                                        }
                                        else
                                        {
                                            if (@Model.Item1[j][k].olcuNoktasi != @Model.Item1[j][k - 1].olcuNoktasi)
                                            {

                                                <tr id="satir_@(j + "_" + rowIndex)">
                                                    <td data-editable="false" id="cell_@(j + "_" + rowIndex)_0" data-olcunoktasi="@Model.Item1[j][k].olcuNoktasi" data-araid="@Model.Item1[j][k].id">
                                                        @Model.Item1[j][k].olcuNoktasi
                                                    </td>

                                                    @for (int z = 1; z <= 9; z++)
                                                    {
                                                        <td tabindex="1" id="cell_@(j + "_" + rowIndex + "_" + z)" data-tabloIndex="@(j)" data-rowIndex="@rowIndex" data-columnIndex="@z" onchange="DegerBul(this)">@Model.Item1[j][k].deger[z - 1]</td>
                                                    }

                                                </tr>
                                                rowIndex++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            <input style="position: absolute; display: none;">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
