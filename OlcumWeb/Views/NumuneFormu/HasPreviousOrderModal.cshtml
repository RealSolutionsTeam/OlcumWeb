

<div style="text-align:center">
    <br />
    <h2 class="swal2-title">

        Önceki <u style="font-weight:bold">@ViewBag.oncekiOrderTipleri </u>Orderı varsa lütfen seçiniz. Yoksa "Yeni Order" butonuna tıklayınız.
    </h2>
</div>


<div>
    @Html.DropDownList("previousOrders", new SelectList(ViewBag.previousOrders, "ID", "orderNo"), "Seçiniz...", new { @class = "form-control select2", @id = "previousOrders" })

    <br />
    <br />
    <div class="row" style="vertical-align:middle">
        <a href="#" class="btn btn-info" onclick="GetPreviousOrderId(1)" style="margin-left:1%"><span style="color:white">Seç</span></a>
        <a href="#" class="btn btn-danger" onclick="GetPreviousOrderId(0)" style="margin-left:2%"><span style="color:white">Yeni Order</span></a>
    </div>
</div>


<script>
    if (jQuery().select2) {
        $(".select2").select2();
    };

    function GetPreviousOrderId(hasPreviousId) {

        if (hasPreviousId == 1) {
            hasPreviousOrder = true;
            hasPreviousOrderId = $('#previousOrders').val();

            GetPreviousOrders(hasPreviousOrderId);
        }
        else {
            ChooseTableComeFrom();
        }
    }


</script>
