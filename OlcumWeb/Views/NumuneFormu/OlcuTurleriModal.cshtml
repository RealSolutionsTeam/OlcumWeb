@model List<OlcumWeb.dbOlcum.OlcuTurleri>

<style>
    .btnOlcuTuru {
        width: 60%;
        height: 60px;
        font-size: 18px;
        min-width:200px !important;
        text-align: center;
        color: red;
        display: table-cell;
        vertical-align: middle;
    }

</style>



<div style="text-align:center">
    <br />

    <h2 class="swal2-title" style="font-size:29px">
        Lütfen işlem yapmak istediğiniz Ölçü Türünü seçiniz.
    </h2>
</div>
<hr />
<br />
@{ var t = 0; var i = 1; }
<div class="tab-@t row">
    @foreach (var item in Model)
    {
        <div class="col-3">
            <a href="#" class="btn btn-info btnOlcuTuru" onclick="ChooseOlcuTuru(this)" data-olcuturuid="@item.id" style="min-width:160px;margin-left:5%"><span style="color:white">@item.olcuTuruAd</span></a>

        </div>


        // this may be just @item.Name?
        if (i % 4 == 0)
        {
            t++;
        @:</div><div class="tab-@t row" style="margin-top:1%">
        }
        i++;
    }
</div>

<script>
    function ChooseOlcuTuru(elem) {
        olcuTuruId = $(elem).data('olcuturuid');

        ChooseOrder(olcuTuruId);
    }
</script>